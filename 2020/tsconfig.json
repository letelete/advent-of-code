{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2020",
    "module": "commonjs",
    "sourceMap": false,
    "inlineSourceMap": true,
    "sourceRoot": "src",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
